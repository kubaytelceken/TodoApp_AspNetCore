@model WorkUpdateDto
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>



    <div class="container my-2">
        <form asp-action="Update" asp-controller="Home" method="post">
            <input type="hidden" asp-for="@Model.Id"/>
            <div class="mb-3">
                <label>İşin Tanımı : </label>
                <input asp-for="@Model.Definition" class="form-control" value="@Model.Definition"/>
            </div>
            <div class="form-check">

                @if (@Model.IsCompleted == true)
                {
                    <input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted" checked />
                }
                else
                {
                    <input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted"/>
                }


                <label class="form-check-label" for="IsCompleted">
                    Tamamlandı mı?
                </label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>
        </form>

    </div>
</body>
</html>